    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "tailwindcss": "^4",
    "typescript": "~5.8.3",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.1"
  }
}
